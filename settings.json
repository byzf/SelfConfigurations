{
    //------------------------------
    //--- editor
    //------------------------------
    "editor.minimap.enabled": false,
    "editor.detectIndentation": false,
    "editor.useTabStops": false,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "solid",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.wordBasedSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",

    //------------------------------
    //--- workbench
    //------------------------------
    "workbench.colorTheme": "Visual Studio Dark",
    "workbench.statusBar.feedback.visible": false,
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.enablePreview": false,

    //------------------------------
    //--- vim
    //------------------------------
    "vim.autoindent": false,
    "vim.useSystemClipboard": true,
    "vim.highlightedyank.duration": 600,
    "vim.cursorStylePerMode.insert": "block",
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["<C-w>", "1"],
            "commands": [
                "workbench.action.moveEditorToFirstGroup",
            ]
        },
        {
            "before": ["<C-w>", "N"],
            "commands": [
                "workbench.action.moveEditorToNextGroup",
            ]
        },
        {
            "before": ["<C-w>", "P"],
            "commands": [
                "workbench.action.moveEditorToPreviousGroup",
            ]
        },
        {
            "before": ["<C-w>", "n"],
            "commands": [
                "workbench.action.moveEditorLeftInGroup",
            ]
        },
        {
            "before": ["<C-w>", "p"],
            "commands": [
                "workbench.action.moveEditorRightInGroup",
            ]
        },
        {
            "before": ["<C-w>", "K"],
            "commands": [
                "workbench.action.moveEditorToAboveGroup",
            ]
        },
        {
            "before": ["<C-w>", "J"],
            "commands": [
                "workbench.action.moveEditorToBelowGroup",
            ]
        },
        {
            "before": ["<C-w>", "H"],
            "commands": [
                "workbench.action.moveEditorToLeftGroup",
            ]
        },
        {
            "before": ["<C-w>", "L"],
            "commands": [
                "workbench.action.moveEditorToRightGroup",
            ]
        },
        {
            "before": ["<C-w>", "down"],
            "commands": [
                "workbench.action.moveActiveEditorGroupDown",
            ]
        },
        {
            "before": ["<C-w>", "left"],
            "commands": [
                "workbench.action.moveActiveEditorGroupLeft",
            ]
        },
        {
            "before": ["<C-w>", "right"],
            "commands": [
                "workbench.action.moveActiveEditorGroupRight",
            ]
        },
        {
            "before": ["<C-w>", "up"],
            "commands": [
                "workbench.action.moveActiveEditorGroupUp",
            ]
        },
        {
            "before": ["g", "o"],
            "commands": [
                "workbench.action.gotoSymbol",
            ]
        },
        {
            "before": ["g", "O"],
            "commands": [
                "workbench.action.showAllSymbol",
            ]
        },
    ],
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": ["j","k"],
            "after": ["<Esc>"]
        }
    ],

    //-------------------------------
    //--- php
    //-------------------------------
    "php.validate.enable": false,
    "php.suggest.basic": false,
    "php.validate.executablePath": "",
    // php-cs-fixer
    // "php.executablePath": "D:/WHJ_Downloads/php-7.3.4-Win32/php.exe",
    // "php-cs-fixer.executablePath": "D:/WHJ_Downloads/php-cs-fixer-v2.phar",

    //------------------------------
    //--- python
    //------------------------------
    "python.venvPath": "d:\\Projects\\python\\",
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true,

    //------------------------------
    //--- posh
    //------------------------------
    "powershell.scriptAnalysis.settingsPath": "d:\\psscript_analyzersettings.psd1",
}